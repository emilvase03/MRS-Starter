<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dk.easv.mrs.GUI.Controller.EditMovieController"
      spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Edit movie" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Title:"/>
        <TextField fx:id="txtMovieTitle" promptText="Enter movie title"/>
    </VBox>
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Year:"/>
        <TextField fx:id="txtMovieYear" promptText="Enter release year"/>
    </VBox>
    <HBox spacing="20" alignment="CENTER">
        <Button text="Save" onAction="#onBtnSaveMovieAction"/>
        <Button text="Cancel" onAction="#onBtnCancelEditMovieAction"/>
    </HBox>
</VBox>
